@model MvcCoreLearn.Models.Post

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="body" class="control-label"></label>
                @*<input asp-for="body" class="form-control" />*@
                <textarea asp-for="body" class="control-label"></textarea>
                <span asp-validation-for="body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicatioDate" class="control-label"></label>
                <input asp-for="PublicatioDate" class="form-control" />
                <span asp-validation-for="PublicatioDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AutherName" class="control-label"></label>
                <input asp-for="AutherName" class="form-control" />
                <span asp-validation-for="AutherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                @*<input asp-for="ImageUrl" class="form-control" />*@
                <img class="img-rounded" src="@Url.Content("~/" + MvcCoreLearn.Properties.Resources.ImgFolder + "/" + Model.ImageUrl)" width="150" height="90" />
                <input type="file" name="myfile" id="file" accept=".png,.jpg,.jpeg,.gif,.tif" class="btn btn-default" />
                <input asp-for="ImageUrl" id="fileinput" class="form-control" placeholder="Image Name"/>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    <script>
        tinymce.init({
            selector: 'textarea',
            directionality: 'rtl',
            //language: 'ar_SA',

            mode: "textareas",

            //plugins: "table,contextmenu,paste,-externalplugin"

        });
    </script>

    <script>
            $(document).ready(function () {
                $("#file").change(function () {
                    if ($("#file").val() != "") {
                        $("#fileinput").prop("value", $("#file").val().split('\\').pop());
                    }
                });
            });
        </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
